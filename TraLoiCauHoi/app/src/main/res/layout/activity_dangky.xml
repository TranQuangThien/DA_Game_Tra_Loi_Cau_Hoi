<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity_DangKy"
    android:id="@+id/form_dangki"
    android:background="@drawable/bgr">
    <LinearLayout
        android:id="@+id/layout_dangky"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />
    <TextView
        android:id="@+id/txt_dangky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Đăng Ký"
        android:textColor="@color/colorAccent"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:textSize="30dp"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/signup_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_dangky"
        android:layout_marginTop="30dp"
        android:hint="UserName. . . "
        android:textColorHint="@color/hind"
        android:layout_marginRight="50dp"
        android:background="@drawable/shape_input"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/hind"
        android:drawableStart="@drawable/ic_username"
        android:drawableLeft="@drawable/ic_username"
        android:drawablePadding="5dp"
        android:drawableTint="@color/hind"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_username"
        android:layout_marginTop="20dp"
        android:hint="Email . . ."
        android:textColorHint="@color/hind"
        android:layout_marginRight="50dp"
        android:background="@drawable/shape_input"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/hind"
        android:drawableStart="@drawable/ic_email"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="5dp"
        android:drawableTint="@color/hind"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_email"
        android:layout_marginTop="20dp"
        android:hint="PassWord . . ."
        android:textColorHint="@color/hind"
        android:layout_marginRight="50dp"
        android:background="@drawable/shape_input"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/hind"
        android:drawableStart="@drawable/ic_password"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dp"
        android:drawableTint="@color/hind"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/signup_re_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_password"
        android:layout_marginTop="20dp"
        android:hint="Confirm PassWord . . ."
        android:textColorHint="@color/hind"
        android:layout_marginRight="50dp"
        android:background="@drawable/shape_input"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/hind"
        android:drawableStart="@drawable/ic_password"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dp"
        android:drawableTint="@color/hind"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/btn_formSignup_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_re_password"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/signup"
        android:text="Đăng Ký"
        android:textColor="@color/hind"
        android:textSize="20dp"
        android:onClick="suKienDangKy"/>
    <Button
        android:id="@+id/btn_formSignup_huy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_formSignup_signup"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="Hủy"
        android:textColor="@color/hind"
        android:textSize="20dp"
        android:onClick="resetForm"/>
</RelativeLayout>