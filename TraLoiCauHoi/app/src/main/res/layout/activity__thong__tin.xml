<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_Thong_Tin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgr"
        android:orientation="horizontal"/>

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/imageview_formInfo_avt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:foreground="@drawable/avt_troll"
        android:foregroundGravity="clip_horizontal|clip_vertical|fill" />
    <TextView
        android:id="@+id/doi_avt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_formInfo_avt"
        android:text="Đổi Ảnh Đại Diện"
        android:textColor="@color/hind"
        android:gravity="center"
        android:onClick="doiavt"/>
    <TextView
        android:id="@+id/txt_formInfo_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doi_avt"
        android:layout_marginTop="30dp"
        android:textSize="24dp"
        android:textColor="@color/hind"
        android:background="@drawable/shape_input"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:hint="QuangThienhihi"
        android:gravity="center"
        android:textColorHint="@color/hind"
        android:padding="15dp"/>
    <TextView
        android:id="@+id/txt_formInfo_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_formInfo_username"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="@color/hind"
        android:background="@drawable/shape_input"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:hint="tranquangthien0@gmail.com"
        android:textColorHint="@color/hind"
        android:padding="15dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/btn_formInfo_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_formInfo_email"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/signup"
        android:text="Cập Nhật"
        android:textSize="24dp"
        android:textColor="@color/hind"
        android:padding="15dp"
        android:onClick="openUpdateInfo"/>
</RelativeLayout>