<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_QuenMatKhau">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgr"
        android:orientation="horizontal"/>
    <ImageView
        android:id="@+id/imageview_formQuenPass_avt"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/avt_troll"/>
    <EditText
        android:id="@+id/editText_formQuenPass_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview_formQuenPass_avt"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_input"
        android:drawableStart="@drawable/ic_email"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="5dp"
        android:hint="Nhập Email"
        android:textColor="@color/hind"
        android:textColorHint="@color/hind"
        android:textSize="24dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/editText_formQuenPass_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_formQuenPass_email"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_input"
        android:drawableStart="@drawable/ic_password"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dp"
        android:hint="Nhập PassWord"
        android:textColor="@color/hind"
        android:textColorHint="@color/hind"
        android:textSize="24dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/editText_formQuenPass_re_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_formQuenPass_Password"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_input"
        android:drawableStart="@drawable/ic_password"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dp"
        android:hint="Nhập Lại PassWord"
        android:textColor="@color/hind"
        android:textColorHint="@color/hind"
        android:textSize="24dp"
        android:inputType="textPassword"/>

<Button
    android:id="@+id/btn_formQuenPass_DoiPass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editText_formQuenPass_re_Password"
    android:layout_marginLeft="50dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:padding="15dp"
    android:textSize="24dp"
    android:text="Đổi Mật Khẩu"
    android:background="@color/signup"
    android:textColor="@color/hind"
    android:onClick="doiMatKhau"/>
</RelativeLayout>